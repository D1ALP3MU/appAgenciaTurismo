<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >


    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agencia de Turismo Paisa-Travel"
        android:gravity="center"
        android:background="#00BCD4"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:text="Nombre:"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textSize="17dp"
            />
        <EditText
            android:id="@+id/etnombre"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Ingrese nombre"
            android:textColor="#000000"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Destino:"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textSize="17dp"
            />
        <Spinner
            android:id="@+id/spdestino"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Fecha Salida:"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textSize="17dp"
            />
        <EditText
            android:id="@+id/etfechaSalida"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Ingrese fecha"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Número de Personas:"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textSize="17dp"
            />
        <EditText
            android:id="@+id/etnumeroPersonas"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Num. Personas"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Número de Días:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="17dp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="2" />

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4" />

            <RadioButton
                android:id="@+id/rb6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Adicionales:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="17dp"
            />

        <Switch
            android:id="@+id/swtourCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:text="Tour por la Ciudad"
            android:textSize="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp">

        <Switch
            android:id="@+id/swdiscoteca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginBottom="20dp"
            android:text="Discoteca"
            android:textSize="15dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Total a Pagar:"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etvalorPagar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:inputType="textPersonName"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/btncalcular"
            android:text="Calcular"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/design_default_color_secondary"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            />
        <Button
            android:id="@+id/btnclear"
            android:text="Limpiar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/design_default_color_secondary"
            app:cornerRadius="20dp"
            />
    </LinearLayout>

</LinearLayout>